{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "*": ["./@mf-types/*"],
      "@api/*": ["./api/*"]
    }
  },
  "include": [
    "src",
    "shared",
    "config",
    "modern.config.ts",
    "tailwind.config.js",
    "api"
  ],
  "exclude": ["**/node_modules"]
}
